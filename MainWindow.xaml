<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Stretch="Fill" Source="https://i.mycdn.me/i?r=AyH4iRPQ2q0otWIFepML2LxRov7WWm3ki93n91I5FbB0pQ"></Image>
        <Border MaxWidth="400" Background="Green" MaxHeight="300" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="Black"></DropShadowEffect>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock FontSize="32">Weather Service!!!!</TextBlock>
                <Button Width="200" Click="Button_Click">Перейти к погоде</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>